<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_main_drawer"
    tools:context=".MainActivity" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@drawable/back">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시판"
        android:id="@+id/button4"
        android:onClick="onBoard"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구장정보"
        android:id="@+id/button5"
        android:onClick="onGroundInfo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Soccer Quick"
        android:id="@+id/textView3"
        android:textSize="50dp"
        android:textColor="#ff2700"
        android:textColorHighlight="#fcff19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="쉽고 빠른 풋살매칭서비스"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_marginBottom="83dp"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:textColor="#0040ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클럽"
        android:id="@+id/button10"
        android:onClick="onClub"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환경설정"
        android:id="@+id/button2"
        android:onClick="onSetting"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>

    //네비게이션바
<ListView android:layout_width="240dp"
android:layout_height="match_parent"
android:id="@+id/lv_activity_main_nav_list"
android:layout_gravity="start"
android:choiceMode="singleChoice"
android:divider="@android:color/transparent"
android:dividerHeight="0dp"
android:background="#EDEDED"/>
</android.support.v4.widget.DrawerLayout>