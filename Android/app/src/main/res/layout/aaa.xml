<?xml version="1.0"?>

<RelativeLayout

    android:weightSum="1"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#576aca"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto">


    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:textColor="@color/icons"
        android:textSize="40dp"
        android:id="@+id/textView3"
        android:text="Soccer Quick"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />





    <!--<TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:text="쉽고 빠른 풋살매칭서비스"
        android:textColor="@color/primary_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView3"
        android:textStyle="bold"/>-->

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/email"
        android:textAlignment="center"
        android:hint="ID"
        android:textColorHint="@color/icons"
        android:gravity="center"
        android:ems ="8"
        android:background="@color/primary_light_invisible"
        android:textSize = "30dp"
        android:layout_above="@+id/imageView2"
        android:layout_marginBottom="17dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pwd"
        android:gravity="center"
        android:hint="PASSWORD"
        android:textColorHint="@color/icons"
        android:ems="10" android:inputType="textPassword"
        android:background="@color/primary_light_invisible"

        android:textSize="30dp"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <!-- <TextView android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:textColor="#ccff66"
         android:textSize="17dp"
         android:id="@+id/textView9"
         android:text="아이디/비밀번호 찾기"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_account_box_white_24dp"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/email"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />


    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/join_btn"
        android:text="회원가입"

        android:onClick="user_join"
        android:textColor="@color/icons"
        android:background="@color/primary_dark"
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="25dp"
        android:ems ="6"
        android:layout_below="@+id/pwd"
        android:layout_toRightOf="@+id/login_btn"
        android:layout_toEndOf="@+id/login_btn"
        android:layout_marginLeft="10dp" />



    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_btn"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="@color/icons"
        android:background="@color/primary_dark"
        android:onClick="user_login"
        android:ems ="6"
        android:gravity="center"
        android:layout_alignTop="@+id/join_btn"
        android:layout_toRightOf="@+id/imageView2" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_vpn_key_white_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignBottom="@+id/pwd"
        android:layout_alignTop="@+id/pwd"
        android:layout_toLeftOf="@+id/pwd"
        android:layout_toStartOf="@+id/pwd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src ="@drawable/ic_soccer_ball"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호 찾기"
        android:id="@+id/textView9"
        android:textSize="17dp"
        android:textColor="#fefffa"
        android:layout_below="@+id/join_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>