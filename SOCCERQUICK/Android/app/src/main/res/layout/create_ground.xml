<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_main_drawer"
    tools:context=".MainActivity" >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="구장명"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="구장명 입력"
                android:id="@+id/grd_name"
                android:layout_weight="5"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="주소입력"
                android:id="@+id/grd_address"
                android:layout_weight="5"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="지역대분류"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대전"
                android:layout_weight="5"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="지역소분류"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grd_local"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="전화번호 입력"
                android:id="@+id/grd_num"
                android:inputType="phone"
                android:layout_weight="5"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="코트정보"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="코트 갯수 입력"
                android:id="@+id/grd_court"
                android:layout_weight="5"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="영업시간"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ex) 0시 ~ 24시"
                android:layout_weight="5"
                android:id="@+id/grd_time"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="휴일정보"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grd_holiday"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="요금정보"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ex) 주간 50000원(시간당) / 야간 60000원"
                android:layout_weight="5"
                android:textSize="15dp"
                android:id="@+id/grd_fee"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="기타정보"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="기타정보 입력"
                android:layout_weight="5"
                android:id="@+id/grd_etc"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주차장"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>
                <CheckBox
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/grd_parking"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샤워장"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>
                <CheckBox
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/grd_shower"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매점"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>
                <CheckBox
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/grd_market"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="등록"
                android:id="@+id/btnCreate"
                android:layout_alignTop="@+id/btnCancle"
                android:textStyle="bold" />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="취소"
                android:id="@+id/btnCancle"
                android:textStyle="bold"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    //네비게이션바
    <ListView android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/lv_activity_main_nav_list"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#EDEDED"/>
</android.support.v4.widget.DrawerLayout>